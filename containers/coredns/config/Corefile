(common) {
  errors
  log error
  reload
  loadbalance
  cache
  loop
  local

  prometheus :9153

  health {
    lameduck 5s
  }
}

(k8s_gateway) {
  forward . 10.8.20.211:53
}

unifi {
  import common
  hosts /host/etc/hosts {
    ttl 1
    reload 5s
  }
}

# Hack to prevent the gatway returning 127.0.0.1 from /etc/hosts
gateway.natallan.com {
  import common
  template IN A gateway.natallan.com {
    answer "{{ .Name }} 60 IN A 10.8.10.1"
  }
}

trux.dev {
  import common
  hosts /host/etc/hosts {
    ttl 1
    reload 5s
    fallthrough
  }
  import k8s_gateway
}

natallan.com {
  import common
  hosts /host/etc/hosts {
    ttl 1
    reload 5s
  }
}

1.10.in-addr.arpa {
  hosts /host/etc/hosts {
    ttl 1
    reload 5s
  }
}
